{
  "trailingComma": "all",
  "printWidth": 100,
  "arrowParens": "avoid",
  "useTabs": false,
  "endOfLine": "lf",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "plugins": ["@prettier/plugin-pug"],
  "overrides": [
    {
      "files": ["**/*.pug"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
